<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/red_magenta">

    <ImageView
        android:id="@+id/img_imagenTabla_itemTablaLocal"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:contentDescription="@string/nombre_tabla"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_nombreTabla_itemTablaEntrenar"
            android:layout_width="246dp"
            android:layout_height="75dp"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="@string/nombre_tabla"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_diasTablas_itemTablaEntrenar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="TextView"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>