<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gris_oscuro"
    android:orientation="vertical"
    tools:context=".PopUpAnadirEjercicio">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gris_oscuro"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_nombreEjercicio_popUpAnadirEjercicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/nombre_ejercicio"
            android:textColor="@color/dark_magenta"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/poip_imagenEjercicio_popipAnadirEjercicio"
            android:layout_width="311dp"
            android:layout_height="199dp"
            android:layout_margin="10dp"
            android:contentDescription="@string/imagen_ejercicio"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />

        <ScrollView
            android:layout_width="292dp"
            android:layout_height="152dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_descripcionEjercicio_popUpAnadirEjercicio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/descripcion_ejercico"
                    android:textColor="@color/white"
                    android:textColorHint="@color/grisclaro" />

            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/number_numeroSeries_popUpAnadirEjercicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="50dp"
                android:layout_marginRight="50dp"
                android:layout_weight="1"
                android:autofillHints=""
                android:ems="10"
                android:gravity="center"
                android:hint="@string/_00"
                android:inputType="number"
                android:textColor="@color/white"
                android:textColorHint="@color/grisclaro"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/number_numeroRepeticiones_popUpAnadirEjercicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:layout_weight="1"
                android:autofillHints=""
                android:ems="10"
                android:gravity="center"
                android:hint="@string/_00"
                android:inputType="number"
                android:textColor="@color/white"
                android:textColorHint="@color/grisclaro"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/series"
                android:textColor="@color/grisclaro" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginLeft="35dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="@string/repeticiones"
                android:textColor="@color/grisclaro" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_anadirEjercicio_popUpAnadirEjercicio"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:onClick="anadirEjercicioAListaEjercicio"
            android:text="@string/a_adir"
            android:textColor="@color/white"
            app:backgroundTint="@color/dark_magenta" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>