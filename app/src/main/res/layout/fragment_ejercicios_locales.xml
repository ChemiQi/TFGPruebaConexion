<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ejercicios_locales"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/negroclaro"
    tools:context=".EjerciciosLocalesFr">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_verEjerciciosLocales_ejerciciosLocalesFr"
        android:layout_width="378dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="120dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_anadirEjercicio_ejerciciosLocalesFr"
        android:layout_width="118dp"
        android:layout_height="96dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:contentDescription="AddEjercicio"
        android:scaleType="fitCenter"
        android:src="@drawable/botonaddejercicio"
        app:layout_constraintEnd_toEndOf="@+id/rv_verEjerciciosLocales_ejerciciosLocalesFr"
        app:layout_constraintTop_toBottomOf="@+id/rv_verEjerciciosLocales_ejerciciosLocalesFr" />
</androidx.constraintlayout.widget.ConstraintLayout>